@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <meta name="viewport" content="width=device-width"/>

    @Styles.Render("~/bundles/bootstrap")

    @Styles.Render("~/bundles/themes/base/css")
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="container">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">BusinessBooker</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                    <li>@Html.ActionLink("Restaurant", "Index", "Restaurant")</li>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>

                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
            </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>
    <div class="jumbotron">
        <div id="body">
            <section class="container">
                @RenderBody()
            </section>
        </div>
    </div>
</div> <!-- /container -->

<footer style="background-color: white; height: 20px">
    <div class="container">
        <div>
            <div style="color: black; font-size: 10px;">
                <p>&copy; @DateTime.Now.Year - BusinessBooker</p>
            </div>
        </div>
    </div>
</footer>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryui")
@Scripts.Render("~/bundles/bootstrap")
@*<script src="~/Scripts/jquery.datetimepicker.js"></script>*@
@Scripts.Render("~/bundles/Main")
@RenderSection("scripts", false)
</body>
</html>